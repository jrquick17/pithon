#:kivy 1.0.9

<DartBoard>:
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos:  0, 0
            size: self.height, self.width

    Target:
        id: target

<Target>:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Ellipse:
            pos: 0, 0
            size: self.radius, self.radius

<Dart>:
    size: 20, 20
    canvas:
        Color:
            rgba: self.r, self.g, 0, 1
        Ellipse:
            pos: 0, 0
            size: self.size

<PiDarts>:
    canvas:
        Color:
            rgb: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.width, self.height
    DartBoard:
        id: dart_board
        center: self.parent.center
    ScoreBoard:
        id: score_board
        center_x: self.parent.center_x
        top: self.parent.top - self.height

<PiSeries>:
    canvas:
        Color:
            rgb: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.width, self.height
    Label:
        color: 1, 1, 1, 1
        text: "Estimate: " + str(root.estimate)
        markup: True
        pos: root.center_x, root.center_y + 30

<ScoreBoard>:
    size: 500, 100
    canvas:
        Color:
            rgb: 0, 0, 0, 1
        Rectangle:
            size: self.width, self.height
            pos: self.parent.center_x - (self.width / 2), self.parent.height - self.height - 25
    Label:
        color: 1, 1, 1, 1
        text: "Hits: " + str(root.hits)
        markup: True
        pos: root.center_x, root.center_y - 10
    Label:
        color: 1, 1, 1, 1
        text: "Misses: " + str(root.misses)
        markup: True
        pos: root.center_x, root.center_y + 10
    Label:
        color: 1, 1, 1, 1
        text: "Estimate: " + str(root.estimate)
        markup: True
        pos: root.center_x, root.center_y + 30

