<PiSeries>:
    canvas:
        Color:
            rgb: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.width, self.height
    Label:
        color: 1, 1, 1, 1
        text: "Estimate: " + str(root.estimate)
        markup: True
        pos: root.center_x, root.center_y + 30


NavigationLayout:
    id: nav_layout
    height: root.height
    width: root.width
    size_hint: 1, 1
    MDNavigationDrawer:
        id: nav_drawer
        NavigationDrawerToolbar:
            title: 'Methods'
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: 'Dart Board'
            on_release: app.root.ids.scr_mngr.current = 'darts'
        NavigationDrawerIconButton:
            icon: 'checkbox-blank-circle'
            text: 'Gregory-Leibniz Series'
            on_release: app.root.ids.scr_mngr.current = 'series'
    BoxLayout:
        orientation: 'vertical'
        Toolbar:
            id: toolbar
            title: 'PiThon'
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            left_action_items: [['menu', lambda x: nav_layout.toggle_nav_drawer()]]
        ScreenManager:
            id: scr_mngr
            Screen:
                name: 'darts'
                PiDarts:
#                    speed_slider: speed_slider
                    pos: 0, 0
                    size_hint: 1, 1
            Screen:
                name: 'series'
                PiSeries:
                    pos: 0, 0