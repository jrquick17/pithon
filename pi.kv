#:kivy 1.0.9

<Game>:
    speed_slider: speed_slider
    pos: 0, 0
    size_hint: 1, 1
    Label:
        color: 1, 0, 0, 1
        text: "Estimate: " + str(root.estimate)
        markup: True
        center_x: self.parent.center_x
        center_y: self.parent.center_y
    Label:
        color: 1, 0, 0, 1
        text: "PI: " + str(root.PI)
        markup: True
        center_x: self.parent.center_x
        center_y: self.parent.center_y + 15
    Label:
        color: 1, 0, 0, 1
        text: "Iterations: " + str(root.estimate)
        markup: True
        center_x: self.parent.center_x
        center_y: self.parent.center_y + 30
    Label:
        color: 1, 0, 0, 1
        text: "Speed: " + str(root.speed)
        markup: True
        pos: 0, 0
    MDSlider:
        id: speed_slider
        min: 0
        max: 100
        x: 0
        y: 0
        height: 100
        width: self.parent.width


<Dart>:
    size: 20, 20
    canvas:
        Color:
            rgba: self.r, self.g, 0, 1
        Ellipse:
            pos: self.x / 100 * root.width, self.y / 100 * root.height
            size: self.size


<PiDarts>:
    size_hint: 1, 1
    canvas:
        Color:
            rgb: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.height, self.height
    #    DartBoard:
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos:  0, 0
            size: self.height, self.height
    #    Target:
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Ellipse:
            pos: 0, 0
            size: self.height, self.height
#    ScoreBoard:
#        id: score_board
#        center_x: self.parent.center_x
#        top: self.parent.top - self.height

<PiSeries>:
    canvas:
        Color:
            rgb: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.width, self.height
    Label:
        color: 1, 1, 1, 1
        text: "Estimate: " + str(root.estimate)
        markup: True
        pos: root.center_x, root.center_y + 30

